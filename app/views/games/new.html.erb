<div class="container" style="margin: 20px 20px;">
  <div class="jumbotron" style="border: 1px solid black;">
    <h1>New Game</h1>
    <ul class="list-inline"><% @letters.each do |letter|%>
      <li class= "center-text"><div class="blue-box text-center"> <%= letter %></div></li>
      <% end %>
    </ul>
  </div>
  <div class="jumbotron" style="border: 1px solid black; background: rgba(0,200,240,.3)">
    <h3>what is the longest word you can find?</h3>
    <form class = "form-inline" action="./score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="attempt" class="form-control" style="width: 700px;" placeholder="time is ticking .. tic tac" aria-describedby = "basic-addon2">
      <input type="submit" class = "btn btn-primary" value="Click">
      <input type="hidden" name="start_time" value="<%= @start_time %>" >
      <input type="hidden" name="grid" value="<%= @letters %>" >
      <input type="hidden" name="end_time" value="<%= "#{Time.now}" %>" >
    </form>
  </div>
</div>
